<p id="notice"><%= notice %></p>

<h1>Aulas</h1>

<table>
  <thead>
    <tr>
      <th>Nome da aula</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <p>
      <strong>Curso: </strong><%= @curso.nomeCurso %>
    </p>
    <% @aulas.each do |aula| %>
      <tr>
        <td><%= aula.nomeAula%></td>
        <td><%= link_to 'Ver', usuario_curso_aula_path(@current_user,aula.curso_id, aula) %></td>
        <% if @current_user.id == @curso.usuario_id %>
          <td><%= link_to 'Editar aula', edit_usuario_curso_aula_path(@current_user.id, aula.curso_id, aula) %></td>
          <td><%= link_to 'Apagar aula', usuario_curso_aula_path(@current_user.id, aula.curso_id, aula), id: "d-#{aula.nomeAula}", method: :delete, data: { confirm: 'Tem certeza que deseja apagar esse aula?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Voltar', usuario_curso_path(@current_user, @curso) %>
