<p id="notice"><%= notice %></p>

<h1>Cursos</h1>
<table>
  <thead>
    <tr>
      <th>Nome do curso</th>
      <th>Criador do curso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cursos.each do |curso| %>
      <tr>
        <td><%= curso.nomeCurso %></td>
        <td><%= Usuario.find_by(id: curso.usuario_id).nomeUsuario %></td>
        <td><%= link_to 'Ver', [@current_user, curso] %></td>
        <% if @current_user.id == curso.usuario_id %>
          <td><%= link_to 'Editar', edit_usuario_curso_path(curso.usuario_id, curso) %></td>
          <td><%= link_to 'Apagar', [@current_user, curso], id:"d-#{curso.nomeCurso}", method: :delete, data: { confirm: 'Tem certeza que deseja apagar?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Voltar', usuario_path(@current_user) %>
