<p id="notice"><%= notice %></p>

<h1>Comentarios</h1>
<table>
  <thead>
    <tr>
      <th>Comentario</th>
      <th>Usuario</th>
      <th>Curso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comentario.each do |comentario| %>
    <% usuario = Usuario.find_by(id: comentario.usuario_id)  %>
      <tr>
        <td><%= comentario.comentario %></td>
        <td><%= Usuario.find_by(id: comentario.usuario_id).nomeUsuario %></td>
        <td><%= comentario.curso_id %></td>
        <% if @current_user.id == comentario.usuario_id  or @current_user.id == @curso.usuario_id %>
          <td><%= link_to 'Apagar comentario', usuario_curso_comentario_path(@current_user.id, comentario.curso_id, comentario.id ), id: "d-#{comentario.comentario}" ,method: :delete, data: { confirm: 'Tem certeza que deseja apagar esse comentario?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Voltar', usuario_curso_path(@current_user, @curso) %>
